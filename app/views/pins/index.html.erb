  <%- @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= image_tag pin.image.url %>
      <div class="panel-body">
        <%= pin.title %>
      </div>
      <p class="description">
        <%= pin.description %> 
      </p>
    </div>
  <% end %>
</div>
